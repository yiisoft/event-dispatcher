{
    "name": "yiisoft/event-dispatcher",
    "type": "library",
    "description": "Yii Event Dispatcher",
    "keywords": [
        "event",
        "event dispatcher",
        "psr-14"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/event-dispatcher/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/event-dispatcher"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "psr/event-dispatcher": "1.0.0"
    },
    "require-dev": {
        "infection/infection": "^0.20.1",
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^3.18 || ^4.0"
    },
    "provide": {
        "psr/event-dispatcher-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\EventDispatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\EventDispatcher\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "phpunit --colors --no-interaction"
        ]
    }
}
