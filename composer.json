{
    "name": "yiisoft/event-dispatcher",
    "type": "library",
    "description": "Yii Event Dispatcher",
    "keywords": [
        "event",
        "event dispatcher",
        "psr-14"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/event-dispatcher/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/event-dispatcher"
    },
    "require": {
        "php": "^7.4|^8.0",
        "psr/container": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "yiisoft/friendly-exception": "^1.0",
        "yiisoft/injector": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "roave/infection-static-analysis-plugin": "^1.5",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.2"
    },
    "provide": {
        "psr/event-dispatcher-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\EventDispatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\EventDispatcher\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin": {
            "common": "config/common.php",
            "console": "config/console.php",
            "events": "config/events.php",
            "events-web": [
                "$events",
                "config/events-web.php"
            ],
            "events-console": [
                "$events",
                "config/events-console.php"
            ],
            "web": "config/web.php"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
